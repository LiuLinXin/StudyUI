<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.sober_philer.studyui.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/day4"
        android:text="day4_recyclerview_divider"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="44dp"/>

    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/day5"
        android:text="day5_recyclerview_header"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="44dp"/>

    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/day6"
        android:text="day6_recyclerview_animation"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="44dp"/>

    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/day7"
        android:text="day7_drawerlayout"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="44dp"/>

    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/day8"
        android:text="day8_snackbar"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="44dp"/>

    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>
